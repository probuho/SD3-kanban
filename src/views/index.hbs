<!DOCTYPE html>
<html lang="{{__ 'lang'}}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{__ 'app_title'}}</title>
    <!-- Bootstrap 5 + Tema Lux -->
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body class="d-flex flex-column min-vh-100">
    {{> navigation }}
    <main class="container my-5 flex-grow-1">
      <div class="jumbotron">
        <h1 class="display-4">{{__ 'welcome'}}</h1>
        <p class="lead">{{__ 'welcome_message'}}</p>
        <hr class="my-4" />
        <p>{{__ 'welcome_description'}}</p>
        <a class="btn btn-primary btn-lg" href="/auth/signup" role="button">{{__ 'get_started'}}</a>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>