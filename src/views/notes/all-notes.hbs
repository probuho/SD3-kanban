<h1>{{__ 'all_notes'}}</h1>
<a href="/notes/add" class="btn btn-primary mb-3">{{__ 'new_note'}}</a>
{{#if notes.length}}
  <div class="list-group">
    {{#each notes}}
      <a href="/notes/edit/{{this._id}}" class="list-group-item list-group-item-action">
        <h5 class="mb-1">{{this.title}}</h5>
        <p class="mb-1">{{this.description}}</p>
      </a>
    {{/each}}
  </div>
{{else}}
  <p>{{__ 'no_notes'}}</p>
{{/if}}

